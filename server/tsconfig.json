{
  "compilerOptions": {
    "watch": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "..",
    "removeComments": true,
    "incremental": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/**/*.ts",
    "./../shared/**/*.ts"
  ]
}
