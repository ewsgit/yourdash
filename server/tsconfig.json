{
  "compilerOptions": {
    "watch": true,
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "sourceMap": true
  },
  "include": [
    "index.ts",
    "./core/**/*.ts",
    "./apps/**/*.ts"
  ]
}
