{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/renderer/**/*.ts",
    "src/renderer/imports.d.ts",
    "src/preload/*.d.ts",
    "../shared/**/*.ts",
    "../applications/**/desktop-frontend",
    "../applications/**/shared"
  ],
  "exclude": [
    "node_modules"
  ]
}
