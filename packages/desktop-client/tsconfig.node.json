{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "types": [
      "electron-vite/node"
    ]
  },
  "include": [
    "electron.vite.config.*",
    "src/main/*",
    "src/preload/*",
    "../shared/**/*.ts",
    "../applications/**/desktop-backend",
    "../applications/**/shared"
  ],
  "exclude": [
    "node_modules"
  ]
}
