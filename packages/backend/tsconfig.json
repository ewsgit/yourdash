{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "useDefineForClassFields": true,
    "incremental": true,
    "lib": [
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "rootDir": "..",
    "removeComments": true,
    // "incremental": true, // this is causing problems on startup with applications deciding not to load!
    "resolveJsonModule": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.ts",
    "../shared/**/*.ts",
    "../applications/**/backend/**/*.ts"
  ],
  "exclude" : ["node_modules"]
}
