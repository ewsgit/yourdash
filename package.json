{
  "name": "yourdash",
  "version": "0.0.0",
  "description": "The YourDash project",
  "main": "index.js",
  "repository": "https://github.com/ewsgit/yourdash",
  "author": "Ewsgit",
  "license": "MIT",
  "private": true,
  "type": "module",
  "scripts": {
    "start-client": "yarn --cwd ./client dev",
    "visualize-client-bundle": "yarn --cwd ./client visualize-bundle",
    "start-server": "yarn --cwd ./server dev",
    "sync-applications": "nodemon -w ./apps/ --exec node ./toolchain/sync-applications.js",
    "start-desktop": "yarn --cwd ./electron dev",
    "postinstall": "yarn --cwd ./client && yarn --cwd ./server && yarn --cwd ./electron"
  },
  "dependencies": {
    "nodemon": "^2.0.22"
  }
}
